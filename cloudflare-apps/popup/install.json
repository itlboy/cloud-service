{
    "resources": {
        "body": [
            {
                "type": "style",
                "src": "./source/app.css"
            },
            {
                "type": "script",
                "src": "./source/app.js"
            }
        ]
    },
    "preview": {
        "handlers": [
            {
                "options": ["*"],
                "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)",
                "reload": true
            }
        ]
    },
    "options": {
        "properties": {
            "content": {
                "title": "Content",
                "type": "string",
                "format": "richtext",
                "default": "<h1>Write with style!</h1> <h3>Popup box content</h3>"
            },
            "backgroundImage": { 
                "title": "background image",
                "type": "string",
                "format": "image"
            }
        }
    }
}
